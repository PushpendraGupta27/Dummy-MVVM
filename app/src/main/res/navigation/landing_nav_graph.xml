<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mvvmproject.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_videoDetailFragment"
            app:destination="@id/videoDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/programsFragment"
        android:name="com.mvvmproject.ui.ProgramsFragment"
        android:label="fragment_programs"
        tools:layout="@layout/fragment_programs" />

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.mvvmproject.ui.SavedFragment"
        android:label="fragment_saved"
        tools:layout="@layout/fragment_saved" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.mvvmproject.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/videoDetailFragment"
        android:name="com.mvvmproject.ui.VideoDetailFragment"
        android:label="fragment_video_detail"
        tools:layout="@layout/fragment_video_detail" />
</navigation>